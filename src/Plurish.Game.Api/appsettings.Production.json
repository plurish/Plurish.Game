      //       },
      //       "Message": { "DataLength": "8000" },
      //       "AdditionalColumns": [
      //         { "ColumnName": "Thread", "DataType": "int" },
      //         { "ColumnName": "Host", "PropertyName": "MachineName" },
      //         { "ColumnName": "Logger", "PropertyName": "SourceContext" },
      //         { "ColumnName": "TraceId", "PropertyName": "CorrelationId" }
      //       ]
      //     }
      //   }
      // }
    ]
  }
}
